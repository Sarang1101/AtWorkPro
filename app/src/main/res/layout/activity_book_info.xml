<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ECEAEA"
    android:layout_height="match_parent"
    tools:context=".book_info">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="300dp"
        android:id="@+id/detail_rel"
        android:background="@drawable/back2"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="40dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:src="@drawable/wall1"
            android:id="@+id/image_bookinfo"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_bookinfo"
            android:text="NAME"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:textSize="21dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/image_bookinfo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address_bookinfo"
            android:text="Address"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/image_bookinfo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating_bookinfo"
            android:text="Rating"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/address_bookinfo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email_bookinfo"
            android:text="Email"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/rating_bookinfo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phno_bookinfo"
            android:text="Phone"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/email_bookinfo"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/detail_rel"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">
        android:id="@+id/rel2">
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/location_bookinfo"
            android:textSize="21dp"
            android:textStyle="bold"
            android:focusable="false"
            android:hint="Location"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/date_bookinfo"
            android:textSize="21dp"
            android:focusable="false"
            android:textStyle="bold"
            android:hint="Date n Time"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/location_bookinfo"/>
        <Button
            android:layout_width="200dp"
            android:id="@+id/book2"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_bookinfo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_book2"
            android:layout_marginBottom="10dp"
            android:text="BOOK"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/book2"
            android:id="@+id/manage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            android:background="@drawable/manage_btn"
            android:layout_marginBottom="10dp"
            android:text="Manage"
            />
    </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:id="@+id/frame"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5C726D6D"
            android:textStyle="bold"
            android:textSize="50dp"
            android:layout_gravity="center"/>
    </FrameLayout>
</RelativeLayout>