<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#fff"
    >

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="300dp"
        android:background="#A09999"
        android:layout_centerInParent="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_close_alert"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:id="@+id/close_alert"
        android:layout_marginRight="2dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Worker Details"
        android:textStyle="bold"
        android:textSize="18dp"
        android:id="@+id/title"
        android:layout_marginTop="5dp"
        android:textColor="#161515"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Worker Name :"
        android:id="@+id/pause_name"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@id/title" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Name"
        android:layout_toRightOf="@id/pause_name"
        android:id="@+id/pause_name1"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@id/title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Worker ID :"
        android:id="@+id/pause_id"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@id/pause_name" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ID"
        android:layout_toRightOf="@id/pause_name"
        android:id="@+id/pause_id1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@id/pause_name1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATE :"
        android:id="@+id/pause_date"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@id/pause_id" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" date"
        android:layout_toRightOf="@id/pause_name"
        android:id="@+id/pause_date1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@id/pause_id1"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="PAUSE"
            android:textStyle="bold"
            android:background="@drawable/cancel_btn"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:background="@drawable/cancel_btn"
            android:text="CANCEL"
            android:id="@+id/cancel_btn"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>