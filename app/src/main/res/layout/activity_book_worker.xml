<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".book_worker">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="350dp"
        android:layout_height="205dp"
        android:elevation="1dp"
        android:id="@+id/relative"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/relative_back">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:src="@drawable/wall1"
            android:id="@+id/image_rel"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_rel"
            android:text="Name"
            android:layout_toRightOf="@id/image_rel"
            android:layout_marginTop="20dp"
            android:textColor="#D3070707"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#80070707"
            android:text="Carpenter"
            android:id="@+id/type_rel"
            android:layout_below="@id/image_rel"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#80070707"
            android:id="@+id/date_rel"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/type_rel"
            android:textStyle="bold"
            android:text="Time"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_marginTop="50dp"
        android:id="@+id/details_relative"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relative"
        android:layout_centerInParent="true"
        android:layout_height="300dp">
        <RelativeLayout
            android:layout_width="150dp"
            android:id="@+id/rel1"
            android:layout_height="150dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View"
                android:layout_centerInParent="true"
                android:id="@+id/view"
                android:textSize="22dp"
                android:drawableTop="@drawable/ic_viewdetails"
                android:textStyle="bold"
                android:textColor="#0A0A0A"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_toRightOf="@+id/rel1"
            android:id="@+id/rel2"
            android:layout_height="150dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit"
                    android:layout_centerInParent="true"
                    android:text="Edit"
                    android:textSize="22dp"
                    android:drawableTop="@drawable/ic_edit_card"
                    android:textStyle="bold"
                    android:textColor="#0A0A0A"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="150dp"
            android:id="@+id/rel3"
            android:layout_below="@id/rel1"
            android:layout_height="150dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Pause"
                android:id="@+id/pause"
                android:textSize="22dp"
                android:drawableTop="@drawable/ic_pause"
                android:textStyle="bold"
                android:textColor="#0A0A0A"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="150dp"
            android:id="@+id/rel4"
            android:layout_below="@id/rel2"
            android:layout_toRightOf="@id/rel3"
            android:layout_height="150dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_centerInParent="true"
                android:textSize="22dp"
                android:id="@+id/cancel"
                android:drawableTop="@drawable/ic_cancel"
                android:textStyle="bold"
                android:textColor="#0A0A0A"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>

    <View
        android:layout_centerInParent="true"
        android:layout_marginTop="200dp"
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:background="#070707" />
    <View
        android:layout_marginTop="50dp"
        android:layout_width="2dp"
        android:layout_height="300dp"
        android:background="#030303"
        android:layout_centerInParent="true"/>
    </RelativeLayout>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>