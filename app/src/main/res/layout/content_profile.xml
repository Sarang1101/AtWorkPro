<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Profile"
    tools:showIn="@layout/activity_profile">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linear">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Account Info"
    android:layout_marginTop="50dp"
    android:textSize="30dp"
    android:layout_marginLeft="40dp"
    android:textStyle="bold"
    android:textColor="#111010"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_person_home"
        android:drawablePadding="10dp"
        android:layout_marginTop="20dp"
        android:text="Name"
        android:textColor="#111010"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textColor="#3A3535"
        android:textStyle="bold"
        android:layout_marginLeft="80dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_mail_home"
        android:layout_marginTop="30dp"
        android:text="Email"
        android:textColor="#111010"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:textColor="#3A3535"
        android:textStyle="bold"
        android:layout_marginLeft="80dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_addrss_home"
        android:layout_marginTop="30dp"
        android:text="Address"
        android:textColor="#111010"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:textColor="#3A3535"
        android:textStyle="bold"
        android:layout_marginLeft="80dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_date_home"
        android:layout_marginTop="30dp"
        android:text="Date of birth"
        android:drawablePadding="10dp"
        android:textColor="#111010"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dob"
        android:textColor="#3A3535"
        android:textStyle="bold"
        android:layout_marginLeft="80dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_phone_home"
        android:layout_marginTop="30dp"
        android:text="Phone"
        android:textColor="#111010"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:textColor="#3A3535"
        android:textStyle="bold"
        android:layout_marginLeft="80dp"/>

</LinearLayout>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="edit profile"
            android:layout_marginTop="30dp"
            android:id="@+id/edit"
            android:layout_below="@+id/linear"
            android:layout_centerInParent="true"
            android:textColor="#070606"
            android:background="@drawable/button"
            android:layout_marginBottom="20dp"/>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>