<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp" android:layout_height="180dp"
    android:background="#A09999"
    android:layout_gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_close_alert"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:id="@+id/close_alert"
        android:layout_marginRight="2dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textColor="#E2141414"
        android:id="@+id/content"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:text="Are  you  sure  you   want   to  cancel  the  booking?"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="OK"
            android:background="@drawable/cancel_btn"
            android:layout_marginTop="20dp" />
        <Button
            android:layout_width="wrap_content"
            android:background="@drawable/cancel_btn"
            android:text="CANCEL"
            android:id="@+id/cancel_btn"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>
</RelativeLayout>