<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="#F3F1F1"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout1"
        android:gravity="center">

<androidx.cardview.widget.CardView
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_marginTop="10dp"
    android:id="@+id/carpenter"
    card_view:cardElevation="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="15dp"
    android:background="@drawable/back2">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@drawable/carpenter"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carpenter"
        android:textStyle="bold"
        android:layout_gravity="bottom|center"/>
</androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:id="@+id/plumber"
            android:layout_marginLeft="30dp"
            card_view:cardElevation="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="15dp"
            android:background="@drawable/back2">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/plumber"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plumber"
                    android:textStyle="bold"
                    android:layout_gravity="bottom|center"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/layout2"
        android:layout_below="@id/layout1">
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            card_view:cardElevation="10dp"
            android:id="@+id/painter"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="15dp"
            android:background="@drawable/back2">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/painter"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Painter"
                android:textStyle="bold"
                android:layout_gravity="bottom|center"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:id="@+id/mechanic"
            card_view:cardElevation="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="15dp"
            android:background="@drawable/back2">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/mechanic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mechanic"
                android:textStyle="bold"
                android:layout_gravity="bottom|center"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/layout3"
        android:layout_below="@id/layout2">
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            card_view:cardElevation="10dp"
            android:id="@+id/electrician"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="15dp"
            android:background="@drawable/back2">
            <ImageView
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/electrician"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="electrician"
                android:textStyle="bold"
                android:layout_gravity="bottom|center"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:id="@+id/builder"
            card_view:cardElevation="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="15dp"
            android:background="@drawable/back2">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/builder"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Builder"
                android:textStyle="bold"
                android:layout_gravity="bottom|center"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/layout4"
        android:layout_below="@id/layout3">
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:id="@+id/farmer"
            android:layout_marginLeft="10dp"
            card_view:cardElevation="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="15dp"
            android:background="@drawable/back2">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/farmer"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farmer"
                android:textStyle="bold"
                android:layout_gravity="bottom|center"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:id="@+id/gardener"
            android:layout_marginLeft="30dp"
            card_view:cardElevation="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="15dp"
            android:background="@drawable/back2">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/gardener"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gardener"
                android:textStyle="bold"
                android:layout_gravity="bottom|center"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </RelativeLayout>
</ScrollView>